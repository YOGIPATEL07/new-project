@model assignments.Models.Cart

@{
    ViewData["Title"] = "Cart";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
    </dl>

    @if (Model.CartItems != null)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var cartItem in Model.CartItems)
                {
                    <tr>
                        <td>@cartItem.Product.Game</td>
                        <td>@cartItem.Quantity</td>
                        <td>@cartItem.Product.GamesId</td>
                        <td>
                            @((decimal)(cartItem.Quantity * cartItem.Product.GamesId))
                        </td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <td>Total</td>
                    <td colspan="3">@(Model.CartItems.Sum(cartItem => (decimal)(cartItem.Quantity *
                    cartItem.Product.GamesId)))</td>
                </tr>
            </tfoot>
        </table>
    }
</div>

<style>
    th,
    td {
        color: white;

    }
</style>